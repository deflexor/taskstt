
<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tasks</h1>
  </div>


  <div id="tasks" class="min-w-full grid grid-cols-2 grid4 gap-4">
    <%= render "task_list", tasks: @tasks[:new], status: "new" %>
    <%= render "task_list", tasks: @tasks[:in_progress], status: "in_progress" %>
    <%= render "task_list", tasks: @tasks[:cancelled], status: "cancelled" %>
    <%= render "task_list", tasks: @tasks[:completed], status: "completed" %>
  </div>


  <div class="mt-6 flex">
    <%= button_to 'New task', new_task_path, class: "ml-12 px-4 py-2 font-semibold text-sm bg-cyan-500 text-white rounded-full shadow-sm", method: :get, data: { turbo_frame: 'modal' } %>
  </div>

  
</div>

