
<h3 class="has-text-centered">Задачи</h2>

<div id="tasks">
  <div class="columns">
    <div class="column">
      <%= render "task_list", tasks: @tasks[:new], title: "Новые" %>
    </div>
    <div class="column">
      <%= render "task_list", tasks: @tasks[:in_progress], title: "in_progress" %>
    </div>  
  </div>
  <div id="tasks" class="columns">
    <div class="column">
      <%= render "task_list", tasks: @tasks[:cancelled], title: "Отмена" %>
    </div>
    <div class="column">
      <%= render "task_list", tasks: @tasks[:completed], title: "Вып" %>
    </div>  
  </div>
</div>

<%= link_to "New task", new_task_path %>
