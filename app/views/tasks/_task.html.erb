<div id="<%= dom_id task %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= task.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= task.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ends at:</strong>
    <%= task.ends_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Deadline at:</strong>
    <%= task.deadline_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Canceled at:</strong>
    <%= task.canceled_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Completed at:</strong>
    <%= task.completed_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: 'modal' } %>
    <%= link_to 'Edit this task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: 'modal' } %>
    <hr class="mt-6">
  <% end %>
</div>
